s# -*- coding: utf-8 -*-

import unittest

from pyHannanum.morpheme.analyzer import filtering_by_tag, get_words
from pyHannanum.morpheme.analyzer import NOUN_EXTRACTOR

class Test(unittest.TestCase):
    def test_pos_simple_09(self):
        s = u'학교에 가다.'
        self.assertEquals(['학교에', '가다', '.'], get_words(s))

    def test_filtering_by_tag(self):
        s = u'롯데마트가 판매하고 있는 흑마늘 양념 치킨이 논란이 되고 있다.'
        self.assertEquals(['롯데마트', '판매', '흑마늘', '양념', '치킨', '논란'],
                                  filtering_by_tag(s, tags=['ncpa', 'ncn']))
    def test_noun_extractor(self):
        s = u'롯데마트가 판매하고 있는 흑마늘 양념 치킨이 논란이 되고 있다.'
        self.assertEquals(['롯데마트', '판매', '흑마늘', '양념', '치킨', '논란'],
                                          filtering_by_tag(s, NOUN_EXTRACTOR))

if __name__ == '__main__':
    unittest.main()
